<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity GovernmentWorkExperience.
    -->
    <changeSet id="20160313194810" author="jhipster">
        <createTable tableName="government_work_experience">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="period_start" type="date"/>
            
            <column name="period_end" type="date"/>
            
            <column name="personal_work_hours" type="integer"/>
            
            <column name="curriculum_vitae_id" type="bigint"/>
            <column name="government_project_id" type="bigint">
                <constraints unique="true"/>
            </column>
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="curriculum_vitae_id"
                                 baseTableName="government_work_experience"
                                 constraintName="fk_governmentworkexperience_curriculumvitae_id"
                                 referencedColumnNames="id"
                                 referencedTableName="curriculum_vitae"/>

        <addForeignKeyConstraint baseColumnNames="government_project_id"
                                 baseTableName="government_work_experience"
                                 constraintName="fk_governmentworkexperience_governmentproject_id"
                                 referencedColumnNames="id"
                                 referencedTableName="government_project"/>

    </changeSet>
</databaseChangeLog>
